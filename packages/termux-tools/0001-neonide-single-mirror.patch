+#!/bin/bash
+set -euo pipefail
+
+PREFIX="${PREFIX:-}"
+if [[ -z "$PREFIX" ]]; then
+  PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
+fi
+export PREFIX
+
+MIRROR_BASE_DIR="$PREFIX/etc/termux/mirrors"
+
+usage() {
+  echo "Usage: termux-change-repo"
+  echo
+  echo "NeonIDE: only a single default mirror is available."
+  echo "This command will select it."
+}
+
+if [[ "${1-}" == "--help" || "${1-}" == "-help" ]]; then
+  usage
+  exit 0
+fi
+if [[ $# -gt 0 ]]; then
+  usage
+  exit 1
+fi
+
+mkdir -p "$PREFIX/etc/termux" || exit $?
+rm -f "$PREFIX/etc/termux/chosen_mirrors" 2>/dev/null || true
+ln -sf "$MIRROR_BASE_DIR/default" "$PREFIX/etc/termux/chosen_mirrors"
+
+echo "[*] Selected NeonIDE mirror (default)."

