+#!/bin/bash
+set -euo pipefail
+
+if [[ "$(id -u)" == "0" ]]; then
+  echo "Error: Cannot run 'pkg' command as root" >&2
+  exit 1
+fi
+
+PREFIX="${PREFIX:-}"
+if [[ -z "$PREFIX" ]]; then
+  PREFIX="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
+fi
+export PREFIX
+
+MIRROR_BASE_DIR="$PREFIX/etc/termux/mirrors"
+DEFAULT_MIRROR_FILE="$MIRROR_BASE_DIR/default"
+
+show_help() {
+  echo 'Usage: pkg [--check-mirror] command [arguments]'
+  echo
+  echo 'NeonIDE: pkg uses a single fixed mirror (no rotation).'
+  echo "Mirror file: $DEFAULT_MIRROR_FILE"
+  echo
+  exit 1
+}
+
+check_mirror() {
+  local mirror="${1%/}"
+  local timeout="${2-5}"
+
+  timeout "$((timeout + 1))" curl \
+    --head \
+    --fail \
+    --connect-timeout "$timeout" \
+    --location \
+    --user-agent "NeonIDE-PKG/1.0 mirror-checker" \
+    "$mirror/dists/stable/Release" >/dev/null 2>&1
+}
+
+select_mirror() {
+  if [[ ! -f "$DEFAULT_MIRROR_FILE" ]]; then
+    echo "Error: mirror file missing: $DEFAULT_MIRROR_FILE" >&2
+    exit 1
+  fi
+
+  # shellcheck disable=SC1090
+  source "$DEFAULT_MIRROR_FILE"
+
+  if [[ -z "${MAIN:-}" ]] || [[ ! "${MAIN:-}" =~ ^https?://[^[:space:]]+$ ]]; then
+    echo "Error: invalid MAIN url in $DEFAULT_MIRROR_FILE" >&2
+    exit 1
+  fi
+
+  if ! command -v curl >/dev/null 2>&1; then
+    echo "Error: curl is required for mirror checks" >&2
+    exit 1
+  fi
+
+  echo "Using mirror: $MAIN"
+  if ! check_mirror "$MAIN"; then
+    echo "Error: mirror is not accessible: $MAIN" >&2
+    exit 1
+  fi
+
+  mkdir -p "$PREFIX/etc/apt/sources.list.d"
+  echo "deb $MAIN stable main" > "$PREFIX/etc/apt/sources.list"
+  rm -f "$PREFIX/etc/apt/sources.list.d/x11.list" "$PREFIX/etc/apt/sources.list.d/root.list"
+}
+
+if [[ "${1-}" == "--check-mirror" ]]; then
+  shift
+fi
+
+if [[ $# -eq 0 || "${1-}" == help || "${1-}" == -h || "${1-}" == --help ]]; then
+  show_help
+fi
+
+CMD="$1"; shift || true
+ERROR=false
+TERMUX_APP_PACKAGE_MANAGER="${TERMUX_APP_PACKAGE_MANAGER:-apt}"
+
+case "$TERMUX_APP_PACKAGE_MANAGER" in
+  apt)
+    case "$CMD" in
+      f*) dpkg -L "$@";;
+      sh*|inf*) apt show "$@";;
+      add|i*) select_mirror; apt update; apt install "$@";;
+      autoc*) apt autoclean;;
+      cl*) apt clean;;
+      list-a*) apt list "$@";;
+      list-i*) apt list --installed "$@";;
+      rei*) apt install --reinstall "$@";;
+      se*) select_mirror; apt update; apt search "$@";;
+      un*|rem*|rm|del*) apt remove "$@";;
+      upd*) select_mirror; apt update;;
+      up|upg*) select_mirror; apt update; apt full-upgrade "$@";;
+      *) ERROR=true;;
+    esac
+    ;;
+  pacman)
+    case "$CMD" in
+      f*) pacman -Ql "$@";;
+      sh*|inf*) pacman -Qi "$@";;
+      add|i*) pacman -Sy --needed "$@";;
+      autoc*) pacman -Sc;;
+      cl*) pacman -Scc;;
+      list-a*) pacman -Sl "$@";;
+      list-i*) pacman -Q "$@";;
+      rei*) pacman -S "$@";;
+      se*) pacman -Sys "$@";;
+      un*|rem*|rm|del*) pacman -Rcns "$@";;
+      upd*) pacman -Sy "$@";;
+      up|upg*) pacman -Syu "$@";;
+      *) ERROR=true;;
+    esac
+    ;;
+  *)
+    echo "Unsupported package manager: $TERMUX_APP_PACKAGE_MANAGER" >&2
+    exit 1
+    ;;
+esac
+
+if $ERROR; then
+  echo "Unknown command: '$CMD' (run 'pkg help' for usage information)" >&2
+  exit 1
+fi
